{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["esnext", "dom", "DOM.Iterable"],
    "sourceMap": true,
    "esModuleInterop": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "strict": true,
    "allowJs": true,
    "declaration": false,
    "jsx": "react",
    "downlevelIteration": true,
  },
  "compileOnSave": true,
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": ["node_modules", "src/.eslintrc.js", "src/web/**", "src/**/*webpack.config.js"]
}
